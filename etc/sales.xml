    <section name="quote">
        <group name="totals">
            <item name="discount_payment_amount" instance="Lg\PaymentDiscount\Model\Quote\Address\Total\Discount" sort_order="150"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="discount_amount" instance="Lg\PaymentDiscount\Model\Order\Total\Invoice\Discount" sort_order="160"/>
