<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <!--Cart Side bar on checkout index -->
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="discountamount" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Lg_PaymentDiscount/js/view/checkout/cart/totals/discount</item>
                                                            <item name="sortOrder" xsi:type="string">35</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Lg_PaymentDiscount/checkout/cart/totals/discount</item>
                                                                <item name="title" xsi:type="string" translate="true">Payment Discount</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <!--End-->
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>